# Scoopify Club - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit real API keys or secrets to version control

# ============================================================================
# APP CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_URL="https://your-app-domain.vercel.app"
NEXT_PUBLIC_API_URL="https://your-app-domain.vercel.app/api"
NODE_ENV="development"

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgres://username:password@host:port/database?sslmode=require"
DIRECT_URL="postgres://username:password@host:port/database?sslmode=require"

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
NEXTAUTH_URL="https://your-app-domain.vercel.app"
NEXTAUTH_SECRET="your-nextauth-secret-key"
JWT_SECRET="your-jwt-secret-key"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key"
NEXT_PUBLIC_NON_SECURE_MODE="false"

# ============================================================================
# EMAIL CONFIGURATION (Nodemailer with SMTP)
# ============================================================================
SMTP_HOST="mail.your-domain.com"
SMTP_PORT="465"
SMTP_USER="services@your-domain.com"
SMTP_PASSWORD="your-smtp-password"
EMAIL_FROM="Scoopify Club <services@your-domain.com>"
EMAIL_FROM_NAME="Scoopify Club"
EMAIL_FROM_ADDRESS="support@your-domain.com"
EMAIL_REPLY_TO="support@your-domain.com"

# Namecheap SMTP (Alternative)
NAMECHEAP_SMTP_HOST="mail.privateemail.com"
NAMECHEAP_SMTP_PORT="587"
NAMECHEAP_EMAIL_USER="support@your-domain.com"
NAMECHEAP_EMAIL_PASS="your-namecheap-email-password"

# ============================================================================
# STRIPE PAYMENT PROCESSING
# ============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Stripe Price IDs - Complete Service Plans
# Monthly Subscriptions
STRIPE_MONTHLY_1_DOG_PRICE_ID="price_monthly_1_dog"
STRIPE_MONTHLY_2_DOGS_PRICE_ID="price_monthly_2_dogs"
STRIPE_MONTHLY_3_PLUS_DOGS_PRICE_ID="price_monthly_3_plus_dogs"

# One-Time Services
STRIPE_ONETIME_1_DOG_PRICE_ID="price_onetime_1_dog"
STRIPE_ONETIME_2_DOGS_PRICE_ID="price_onetime_2_dogs"
STRIPE_ONETIME_3_PLUS_DOGS_PRICE_ID="price_onetime_3_plus_dogs"

# Initial Cleanup
STRIPE_INITIAL_CLEANUP_PRICE_ID="price_initial_cleanup"

# ============================================================================
# GOOGLE SERVICES
# ============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
GOOGLE_VERIFICATION="your_google_search_console_verification_code"
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# ============================================================================
# AWS S3 (Photo Storage)
# ============================================================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="your-s3-bucket-name"
S3_BUCKET_NAME="your-s3-bucket-name"

# ============================================================================
# CRON JOBS & AUTOMATION
# ============================================================================
CRON_SECRET="your-cron-secret-key"
CRON_API_KEY="your-cron-api-key"
VERCEL_URL="https://your-app-domain.vercel.app"

# ============================================================================
# ADMIN & BUSINESS
# ============================================================================
ADMIN_EMAIL="admin@your-domain.com"

# ============================================================================
# CASH APP INTEGRATION
# ============================================================================
CASHAPP_CLIENT_ID="your-cashapp-client-id"
CASHAPP_CLIENT_SECRET="your-cashapp-client-secret"
CASHAPP_API_URL="https://api.cash.app/v1"

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT=5
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SOCIAL MEDIA & VERIFICATION
# ============================================================================
FACEBOOK_APP_ID="your_facebook_app_id"
TWITTER_CREATOR="@yourtwitterhandle"
LINKEDIN_COMPANY_ID="your_linkedin_company_id"
YANDEX_VERIFICATION="your_yandex_verification_code"
YAHOO_VERIFICATION="your_yahoo_verification_code"

# ============================================================================
# REFERRAL SYSTEM
# ============================================================================
REFERRAL_BONUS_SCOOPER="25.00"
REFERRAL_BONUS_BUSINESS="50.00"
REFERRAL_PERCENTAGE_SCOOPER="10"
REFERRAL_PERCENTAGE_BUSINESS="15"

# ============================================================================
# REDIS (Optional - for rate limiting)
# ============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_TOKEN="your_redis_token"

# ============================================================================
# GITHUB (Deployment only - keep in .env.local)
# ============================================================================
# GITHUB_TOKEN="your_github_token" 