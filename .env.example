# App URL (development)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
DATABASE_PROVIDER="sqlite"
DATABASE_URL="file:./prisma/dev.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# JWT
JWT_SECRET="your-jwt-secret"
JWT_REFRESH_SECRET="your-jwt-refresh-secret"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_TOKEN="your-redis-token"

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Stripe Price IDs
STRIPE_WEEKLY_PRICE_ID="price_weekly"
STRIPE_BIWEEKLY_PRICE_ID="price_biweekly"
STRIPE_MONTHLY_PRICE_ID="price_monthly"
NEXT_PUBLIC_STRIPE_MONTHLY_PRICE_ID="price_monthly"
NEXT_PUBLIC_STRIPE_CLEANUP_PRICE_ID="price_cleanup"

# Resend (Email)
RESEND_API_KEY="your-resend-api-key"

# AWS
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="your-aws-region"
AWS_BUCKET_NAME="your-aws-bucket-name"
S3_BUCKET_NAME="your-s3-bucket"

# Cron Jobs
CRON_SECRET="your-cron-secret"
CRON_API_KEY="your-cron-api-key"

# Admin
ADMIN_EMAIL="admin@example.com"

# Cash App
CASHAPP_CLIENT_ID="your-cashapp-client-id"
CASHAPP_CLIENT_SECRET="your-cashapp-client-secret"
CASHAPP_API_URL="https://api.cash.app/v1"

# NextPublic API URL
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# GitHub Token (for deployment only)
GITHUB_TOKEN="your-github-token"

# Neon specific settings
NEON_POOL_SIZE=20
NEON_IDLE_TIMEOUT=30000
NEON_CONNECTION_TIMEOUT=2000

# Rate Limiting
RATE_LIMIT=5
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Setting
NEXT_PUBLIC_NON_SECURE_MODE="false"

# Other environment variables
NODE_ENV="development" 