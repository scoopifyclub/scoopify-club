# Scoopify Club - Local Environment Variables Template
# DO NOT commit this file to version control
# Copy this file to .env.local and add your real API keys and secrets
# This file overrides values in .env with real production keys

# ============================================================================
# APP CONFIGURATION (Override defaults)
# ============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NODE_ENV="development"

# ============================================================================
# DATABASE (Production Database)
# ============================================================================
DATABASE_URL="postgres://your_db_user:your_db_password@your_db_host:5432/your_db_name?sslmode=require"
DIRECT_URL="postgres://your_db_user:your_db_password@your_db_host:5432/your_db_name?sslmode=require"

# ============================================================================
# AUTHENTICATION & SECURITY (Real Keys)
# ============================================================================
NEXTAUTH_URL="https://your-app-domain.vercel.app"
NEXTAUTH_SECRET="your_real_nextauth_secret_key_here"
JWT_SECRET="your_real_jwt_secret_key_here"
JWT_REFRESH_SECRET="your_real_jwt_refresh_secret_key_here"

# ============================================================================
# EMAIL CONFIGURATION (Real SMTP Credentials)
# ============================================================================
SMTP_HOST="mail.your-domain.com"
SMTP_PORT="465"
SMTP_USER="services@your-domain.com"
SMTP_PASSWORD="your_real_smtp_password"
EMAIL_FROM="Scoopify Club <services@your-domain.com>"
EMAIL_FROM_NAME="Scoopify Club"
EMAIL_FROM_ADDRESS="support@your-domain.com"
EMAIL_REPLY_TO="support@your-domain.com"

# Namecheap SMTP (Real Credentials)
NAMECHEAP_SMTP_HOST="mail.privateemail.com"
NAMECHEAP_SMTP_PORT="587"
NAMECHEAP_EMAIL_USER="support@your-domain.com"
NAMECHEAP_EMAIL_PASS="your_real_namecheap_email_password"

# ============================================================================
# STRIPE PAYMENT PROCESSING (Real Keys)
# ============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_real_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_real_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_real_stripe_webhook_secret"

# Stripe Price IDs - Real Production Price IDs
# Monthly Subscriptions
STRIPE_MONTHLY_1_DOG_PRICE_ID="price_your_real_monthly_1_dog_price_id"
STRIPE_MONTHLY_2_DOGS_PRICE_ID="price_your_real_monthly_2_dogs_price_id"
STRIPE_MONTHLY_3_PLUS_DOGS_PRICE_ID="price_your_real_monthly_3_plus_dogs_price_id"

# One-Time Services
STRIPE_ONETIME_1_DOG_PRICE_ID="price_your_real_onetime_1_dog_price_id"
STRIPE_ONETIME_2_DOGS_PRICE_ID="price_your_real_onetime_2_dogs_price_id"
STRIPE_ONETIME_3_PLUS_DOGS_PRICE_ID="price_your_real_onetime_3_plus_dogs_price_id"

# Initial Cleanup
STRIPE_INITIAL_CLEANUP_PRICE_ID="price_your_real_initial_cleanup_price_id"

# ============================================================================
# GOOGLE SERVICES (Real API Keys)
# ============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_real_google_maps_api_key"
GOOGLE_MAPS_API_KEY="your_real_google_maps_api_key"
GOOGLE_VERIFICATION="your_real_google_search_console_verification_code"
GOOGLE_ANALYTICS_ID="G-REALANALYTICSID"
GOOGLE_TAG_MANAGER_ID="GTM-REALTAGMANAGER"

# ============================================================================
# AWS S3 (Real Credentials for Photo Storage)
# ============================================================================
AWS_ACCESS_KEY_ID="your_real_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_real_aws_secret_access_key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="your_real_s3_bucket_name"
S3_BUCKET_NAME="your_real_s3_bucket_name"

# ============================================================================
# CRON JOBS & AUTOMATION (Real Keys)
# ============================================================================
CRON_SECRET="your_real_cron_secret_key"
CRON_API_KEY="your_real_cron_api_key"
VERCEL_URL="https://your-app-domain.vercel.app"

# ============================================================================
# ADMIN & BUSINESS (Real Contact Info)
# ============================================================================
ADMIN_EMAIL="admin@your-domain.com"

# ============================================================================
# CASH APP INTEGRATION (Real Credentials)
# ============================================================================
CASHAPP_CLIENT_ID="your_real_cashapp_client_id"
CASHAPP_CLIENT_SECRET="your_real_cashapp_client_secret"
CASHAPP_API_URL="https://api.cash.app/v1"

# ============================================================================
# RATE LIMITING (Production Settings)
# ============================================================================
RATE_LIMIT=5
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SOCIAL MEDIA & VERIFICATION (Real Codes)
# ============================================================================
FACEBOOK_APP_ID="your_real_facebook_app_id"
TWITTER_CREATOR="@your_real_twitter_handle"
LINKEDIN_COMPANY_ID="your_real_linkedin_company_id"
YANDEX_VERIFICATION="your_real_yandex_verification_code"
YAHOO_VERIFICATION="your_real_yahoo_verification_code"

# ============================================================================
# REFERRAL SYSTEM (Real Values)
# ============================================================================
REFERRAL_BONUS_SCOOPER="25.00"
REFERRAL_BONUS_BUSINESS="50.00"
REFERRAL_PERCENTAGE_SCOOPER="10"
REFERRAL_PERCENTAGE_BUSINESS="15"

# ============================================================================
# REDIS (Production Redis)
# ============================================================================
REDIS_URL="redis://your_redis_host:6379"
REDIS_TOKEN="your_real_redis_token"

# ============================================================================
# GITHUB (Deployment Only - Keep Secret!)
# ============================================================================
GITHUB_TOKEN="your_real_github_token_here"

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================
NEXT_PUBLIC_NON_SECURE_MODE="false" 