{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/schedule-services",
      "schedule": "0 0 * * 0"
    },
    {
      "path": "/api/cron/retry-payments",
      "schedule": "0 4 * * *"
    }
  ],
  "buildCommand": "prisma generate && prisma migrate deploy && next build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "github": {
    "enabled": true,
    "silent": false
  }
} 