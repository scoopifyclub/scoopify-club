# Use Node.js version 20.x
node-version=20.x

# Ensure HTTPS is used for package registry
registry=https://registry.npmjs.org/

# Increase network timeout to handle large packages (using proper format)
fetch-timeout=100000

# Disable audit for faster installations
audit=false

# Disable force by default for safety
force=false

# Engine strict checking
engine-strict=true 